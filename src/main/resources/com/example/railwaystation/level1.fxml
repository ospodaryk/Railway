<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.canvas.Canvas?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.railwaystation.UI.Controllers.Level1Controller"
            prefHeight="900.0" prefWidth="4000.0"
            styleClass="levelView">

    <Button fx:id="back" layoutX="15.0" layoutY="15.0" mnemonicParsing="false" onAction="#backToMain"
            prefHeight="100.0" prefWidth="100.0" styleClass="train" text="        ">
        <font>
            <Font name="Georgia BOLD" size="30.0"/>
        </font>
    </Button>
    <Button fx:id="startGame" layoutX="135.0" layoutY="50.0" mnemonicParsing="false" onAction="#startGame"
            prefHeight="60.0" prefWidth="245.0" styleClass="button" text="Почати гру">
        <font>
            <Font name="Georgia BOLD" size="30.0"/>
        </font>
    </Button>
    <Text layoutX="135.0" layoutY="35.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Максимальна кількість "
          textAlignment="LEFT" wrappingWidth="499.0">
        <font>
            <Font name="Georgia BOLD" size="24.0"/>
        </font>
    </Text>
    <Spinner fx:id="Amount" styleClass="spin" editable="true" layoutX="440.0" layoutY="8.0" prefHeight="30.0"
             prefWidth="150.0" amountToStepBy="2"/>



    <Canvas fx:id="canvasL1" height="1000.0" width="1000.0" layoutX="200.0" layoutY="400.0"/>
    <Canvas fx:id="canvasinfo" height="1.0" width="1.0" layoutX="1.0" layoutY="1.0">
    </Canvas>


</AnchorPane>